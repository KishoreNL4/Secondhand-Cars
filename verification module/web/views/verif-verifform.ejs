    <script>
      function validate() {
        var Frm = document.PasuMarketForm;

        if (Frm.txtOwnername.value == "") {
          Swal.fire({
            text: "Please enter all the details",
            didClose: () => {
              Frm.txtOwnername.focus();
            },
          });

          return false;
        }

        if (Frm.txtMobile.value == "") {
          Swal.fire({
            text: "Please enter all the details",
            didClose: () => {
              Frm.txtMobile.focus();
            },
          });

          return false;
        }

        if (Frm.txtBrand.value == "") {
          Swal.fire({
            text: "Please enter all the details",
            didClose: () => {
              Frm.txtBrand.focus();
            },
          });

          return false;
        }

        if (Frm.txtModel.value == "") {
          Swal.fire({
            text: "Please enter all the details",
            didClose: () => {
              Frm.txtModel.focus();
            },
          });

          return false;
        }

        if (Frm.txtregistration.value == "") {
          Swal.fire({
            text: "Please enter all the details",
            didClose: () => {
              Frm.txtregistration.focus();
            },
          });

          return false;
        }

        if (Frm.txtRegistrationvalidity.value == "") {
          Swal.fire({
            text: "Please enter all the details",
            didClose: () => {
              Frm.txtRegistrationvalidity.focus();
            },
          });

          return false;
        }

          if (Frm.txtColour.value == "") {
          Swal.fire({
            text: "Please enter all the details",
            didClose: () => {
              Frm.txtColour.focus();
            },
          });

          return false;
        }

           if (Frm.txtChassis.value == "") {
          Swal.fire({
            text: "Please enter all the details",
            didClose: () => {
              Frm.txtChassis.focus();
            },
          });

          return false;
        }

          if (Frm.txtEngine.value == "") {
          Swal.fire({
            text: "Please enter all the details",
            didClose: () => {
              Frm.txtEngine.focus();
            },
          });

          return false;
        }


         if (Frm.txtAccident.value == "") {
          Swal.fire({
            text: "Please enter all the details",
            didClose: () => {
              Frm.txtAccident.focus();
            },
          });

          return false;
        }





        }

      
        

   


        ActivateSpinner();
      

      function viewFile(FileName, FileHash) {
        document.getElementById("FileViewModelBody").innerHTML =
          "<iframe id='iframe_FileView' src='' frameborder='0' height='400px' width='100%'></iframe>";
        document.getElementById("iframe_FileView").src =
          "./verifViewFile?FileName=" + FileName + "&FileHash=" + FileHash;
        $("#FileViewModel").modal("show");
      }

      function ActivateSpinner() {
        $("#SpinnerModal").modal({
          keyboard: false,
          backdrop: "static",
          show: true,
        });
      }
    </script>
  </head>

