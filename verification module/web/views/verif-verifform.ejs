    <!-- FileView Modal Starts here -->

    <div
      class="modal fade"
      id="FileViewModel"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="row justify-content-center">
        <div class="col-lg-6 col-md-6 text-center">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
              <div class="modal-body" id="FileViewModelBody"></div>
              <div class="modal-footer model-add-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal"
                >
                  Close
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- FileView Modal Ends here -->

    <!-- Spinner Modal Starts here -->

    <div
      class="modal fade"
      id="SpinnerModal"
      tabindex="-1"
      aria-labelledby="SpinnerModal"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="pm-card-01-header">
              We are writing verification information into Blockchain.
            </div>
            <div class="pm-card-01-header margintop15">Please Wait ....</div>
            <div class="uploadspinner">
              <div
                class="spinner-border text-success"
                style="width: 3rem; height: 3rem"
                role="status"
              >
                <span class="sr-only">Loading...</span>
              </div>
            </div>
          </div>
        </div>
      </div>
